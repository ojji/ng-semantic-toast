{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "ng-semantic-toast"
  },
  "apps": [
    {
      "root": "demo/src",
      "outDir": "demo/dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "test": "test.ts",
      "polyfills": "polyfills.ts",
      "tsconfig": "../../tsconfig.demo.json",
      "testTsconfig": "../../src/tsconfig.spec.json",
      "prefix": "demo",
      "styles": [
        "styles.css"
      ],
      "scripts": [],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "test": {
    "karma": {
      "config": "./src/karma.conf.ts"
    }
  },
  "defaults": {
    "styleExt": "css",
    "interface": {
      "prefix": "false"
    },
    "class": {
      "spec": false
    },
    "component": {
      "inlineStyle": false,
      "inlineTemplate": false,
      "spec": true
    },
    "directive": {      
      "spec": true
    },
    "module": {      
      "spec": false
    },
    "pipe": {      
      "spec": true
    },
    "service": {      
      "spec": true
    }
  }
}
